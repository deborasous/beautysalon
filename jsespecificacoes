//OBJETO é um conjunto de atributos e funcionalidades
object({
name: 'carro',
color: 'vermelho',
marca: 'Celta' //propriedades

//o objeto tambem aceita variavel
correr: function(){
    //coloca os codigos
}
})


//FUNÇÃO - serve para agrupar uma sequencia de codigos. cria sequencia de passos da aplicação e execulta a sequencia///////////////
function liquidificador(frutas) {

//pode colocar sequencias de codigos infinitos

}

//VARIAVEIS//////////////////////
var name = 'Debora'
//VAR é declarada como NAME que recebe o valor 'Debora'. o NAME na VAR pode receber outro valor a qualquer momento, declarando NAME = 'Carla'

//a Function ALERT(name) recebe o argumento NAME  e imprime na tela, assim como o console.log

const name = 'Debora'
//a CONST é uma variavel do tipo constante e não pode mudar  seu valor como a VAR, SENDO SEU VALOR FIXO


//ATRIBUINDO OBJETO NA VARIAVEL/////////////////////

const pessoa = {
    name: 'Debora',
    age: 34,
    falar: function () {
        alert(pessoa.name)//pega a pessoa pela propriedade NAME
    }
}

//para executar/imprimir esse valor, usa a variavel declarada seguinda de . para acessar as propriedades e funcionalidades dessa pessoa
pessoa.falar()


//DOM Document Object Model/////////////////////
document.body.style.bacground = 'red'

//document acha a tag htlm (body), aplica o style nele e aplca o background como red. PODE CONTROLAR TODO O HTML PELO DOM